<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"
    android:background="@color/bg_color_choose"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/complete_bar"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <ImageView
            android:id="@+id/Iv_return"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/return_"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="恭喜你完成了本次运动！"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:textSize="20dp"
            android:textColor="#000000"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_time_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="本次运动总时长"
            android:textSize="30dp"
            android:textStyle="bold"
            android:paddingBottom="10dp"
            android:paddingTop="20dp"
            android:gravity="center"/>
        <TextView
            android:id="@+id/tv_sport_time"
            android:layout_below="@+id/tv_time_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="00:00:00"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textColor="#FF0000"
            android:paddingTop="20dp"
            android:paddingBottom="30dp"
            android:gravity="center"/>
    </RelativeLayout>
    <View android:layout_width="match_parent"
        android:layout_height="3dp"
        android:alpha="0.6"
        android:background="#808080"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">
        <TextView
            android:id="@+id/tv_record_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:textSize="20sp"
            android:text="为这次运动留下些美好回忆吧！"
            android:gravity="center"/>
        <LinearLayout
            android:layout_below="@id/tv_record_title"
            android:id="@+id/ll_score"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_record1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/sandstorm"
                    android:textSize="15sp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:gravity="center"
                    android:text="得分"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/et_score"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="15sp"
                    android:maxLines="1"
                    android:padding="5dp"
                    android:lines="1"
                    android:layout_margin="5dp"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:background="@drawable/edit_text_rounded_background"/>

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_below="@id/ll_score"
            android:id="@+id/ll_partner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/sandstorm"
                    android:textSize="15sp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:gravity="center"
                    android:text="参与人"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/et_partner"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="15sp"
                    android:inputType="text"
                    android:padding="5dp"
                    android:layout_margin="5dp"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:singleLine="true"
                    android:background="@drawable/edit_text_rounded_background"/>

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_below="@id/ll_partner"
            android:id="@+id/ll_note"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/sandstorm"
                    android:textSize="15sp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:gravity="center"
                    android:text="备注"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/et_note"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:textSize="15sp"
                    android:layout_margin="5dp"
                    android:padding="5dp"
                    android:gravity="top|left"
                    android:background="@drawable/edit_text_rounded_background"/>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_note_et"
            android:layout_below="@id/ll_note"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">
        </LinearLayout>
        <LinearLayout
            android:layout_below="@id/ll_note_et"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/rl_complete"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="评分"
                android:layout_marginTop="10dp"
                android:paddingBottom="10dp"
                android:gravity="center"
                android:textSize="20sp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageButton
                    android:id="@+id/ib_star_1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_star_line"
                    android:background="@color/bg_color_choose"
                    android:layout_weight="1"/>
                <ImageButton
                    android:id="@+id/ib_star_2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_star_line"
                    android:background="@color/bg_color_choose"
                    android:layout_weight="1"/>
                <ImageButton
                    android:id="@+id/ib_star_3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_star_line"
                    android:background="@color/bg_color_choose"
                    android:layout_weight="1"/>
                <ImageButton
                    android:id="@+id/ib_star_4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_star_line"
                    android:background="@color/bg_color_choose"
                    android:layout_weight="1"/>
                <ImageButton
                    android:id="@+id/ib_star_5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_star_line"
                    android:background="@color/bg_color_choose"
                    android:layout_weight="1"/>
            </LinearLayout>
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/rl_complete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:padding="10dp"
            android:layout_alignParentBottom="true">
            <Button
                android:id="@+id/button_complete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="完成"
                android:textSize="20sp"
                android:textStyle="bold"
                android:background="@drawable/selector_sport"/>
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>