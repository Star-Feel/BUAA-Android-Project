<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/dialog_shape">

    <com.itheima.wheelpicker.WheelPicker
        android:id="@+id/number_picker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:wheel_atmospheric="true"
        app:wheel_curved="true"
        app:wheel_cyclic="true"
        app:wheel_item_text_color="#6b6b6b"
        app:wheel_selected_item_position="5"
        android:layout_centerHorizontal="true"
        app:wheel_item_text_size="20dp"
        android:layout_centerVertical="true"
        app:wheel_selected_item_text_color="#000000" />

    <TextView
        android:id="@+id/unit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="cm"
        android:layout_toRightOf="@id/number_picker"
        android:layout_centerVertical="true"
        android:textSize="22dp"
        android:layout_marginLeft="10dp"
        android:textColor="#6b6b6b"
        />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text="确定"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/number_picker"
        android:textColor="#ffffff"
        android:background="@drawable/button_buaa_style"
        android:layout_gravity="center_horizontal"
        android:textSize="16dp"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="15dp" />

</RelativeLayout>
